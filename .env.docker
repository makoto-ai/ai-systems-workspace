# 音声ロールプレイシステム - Docker開発環境用設定

# ==================================================
# データベース接続設定
# ==================================================

# ロールプレイDB (PostgreSQL)
ROLEPLAY_DB_HOST=localhost
ROLEPLAY_DB_PORT=5432
ROLEPLAY_DB_NAME=voice_roleplay_db
ROLEPLAY_DB_USER=voice_user
ROLEPLAY_DB_PASSWORD=voice_secure_2024
ROLEPLAY_DB_URL=postgresql://voice_user:voice_secure_2024@localhost:5432/voice_roleplay_db

# 分析DB (TimescaleDB)
ANALYTICS_DB_HOST=localhost
ANALYTICS_DB_PORT=5433
ANALYTICS_DB_NAME=voice_analytics_db
ANALYTICS_DB_USER=analytics_user
ANALYTICS_DB_PASSWORD=analytics_secure_2024
ANALYTICS_DB_URL=postgresql://analytics_user:analytics_secure_2024@localhost:5433/voice_analytics_db

# Redis キャッシュ
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# ==================================================
# 既存設定 (継承)
# ==================================================

# HuggingFace Hub Token
HUGGINGFACE_HUB_TOKEN=

# AI Service API Keys
GROQ_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=

# Voice Services
VOICEVOX_HOST=localhost
VOICEVOX_PORT=50021

# Advanced Features
ENABLE_VOICE_CLONING=false
ENABLE_SPEAKER_DIARIZATION=false
ENABLE_ADVANCED_VOICE_ANALYSIS=true

# ==================================================
# 開発環境設定
# ==================================================

# アプリケーション設定
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# セッション設定
SESSION_SECRET_KEY=dev_secret_key_2024_voice_roleplay
SESSION_EXPIRE_MINUTES=30

# キャッシュ設定
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# 監視設定
ENABLE_METRICS=true
METRICS_PORT=8001
PROMETHEUS_URL=http://localhost:9090

# ==================================================
# パフォーマンス設定
# ==================================================

# データベース接続プール
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis接続プール
REDIS_POOL_SIZE=10
REDIS_POOL_MAX_CONNECTIONS=50

# API制限
MAX_CONCURRENT_REQUESTS=30
REQUEST_TIMEOUT_SECONDS=300

# 音声処理設定
AUDIO_QUALITY_HIGH=true
AUDIO_SAMPLE_RATE=48000
AUDIO_BIT_DEPTH=24
AUDIO_PROCESSING_TIMEOUT=30
