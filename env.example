# ========================================
# AI Systems Workspace - 環境変数テンプレート
# ========================================
# 使用方法: このファイルを .env にコピーして、実際の値を設定してください
# 重要: .envファイルは絶対にGitにコミットしないでください

# ========================================
# Claude API設定
# ========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_VERSION=2023-06-01
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ========================================
# OpenAI API設定
# ========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_VERSION=2024-02-15
GPT_MODEL=gpt-4o-mini

# ========================================
# Groq API設定
# ========================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192

# ========================================
# Google API設定
# ========================================
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SCHOLAR_API_KEY=your_google_scholar_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# ========================================
# Whisper API設定
# ========================================
WHISPER_API_KEY=your_whisper_api_key_here
WHISPER_MODEL=whisper-1

# ========================================
# HuggingFace API設定
# ========================================
HUGGINGFACE_HUB_TOKEN=your_huggingface_token_here

# ========================================
# データベース設定
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/ai_systems_db
REDIS_URL=redis://localhost:6379/0
POSTGRES_PASSWORD=your_postgres_password_here

# ========================================
# セキュリティ設定
# ========================================
SECRET_KEY=your_secret_key_here_32_characters_minimum
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# ========================================
# 外部サービス設定
# ========================================
# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# Slack (通知用)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_CHANNEL_ID=your_slack_channel_id_here

# Email (通知用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# ========================================
# 音声サービス設定
# ========================================
VOICEVOX_HOST=localhost
VOICEVOX_PORT=50021
ENABLE_VOICE_CLONING=false
ENABLE_SPEAKER_DIARIZATION=false
ENABLE_ADVANCED_VOICE_ANALYSIS=true

# ========================================
# 監視・ログ設定
# ========================================
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true
SECURITY_LOG_ENABLED=true
PERFORMANCE_MONITORING=true

# ========================================
# 開発環境設定
# ========================================
ENVIRONMENT=development
DEBUG=false
TESTING=false
RELOAD=true

# ========================================
# ファイルパス設定
# ========================================
BACKUP_DIR=./backups
LOG_DIR=./logs
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# ========================================
# API制限設定
# ========================================
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=4000
RATE_LIMIT_ENABLED=true

# ========================================
# セキュリティ警告
# ========================================
# ⚠️  このファイルの内容を外部に共有しないでください
# ⚠️  本番環境では、より強力なパスワードを使用してください
# ⚠️  定期的にAPIキーをローテーションしてください
# ⚠️  .envファイルのバックアップは暗号化して保存してください 