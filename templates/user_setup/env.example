# 🧠 AI Voice Roleplay System - Environment Variables Template
# 作成日: 2025-08-04
# 使用方法: cp env.example .env でコピーして使用

# =============================================================================
# 🔑 API Keys (必須)
# =============================================================================

# Anthropic Claude API Key (必須)
# https://console.anthropic.com/ で取得
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI GPT-4 API Key (推奨)
# https://platform.openai.com/api-keys で取得
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# 🎤 音声設定
# =============================================================================

# 音声入力デバイス
AUDIO_INPUT_DEVICE=default

# 音声出力デバイス
AUDIO_OUTPUT_DEVICE=default

# サンプリングレート
SAMPLE_RATE=16000

# 音声品質設定
AUDIO_QUALITY=high

# =============================================================================
# 🤖 AI設定
# =============================================================================

# Claudeモデル選択
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# GPT-4モデル選択
GPT_MODEL=gpt-4-turbo-preview

# 最大トークン数
MAX_TOKENS=4096

# 温度設定（創造性）
TEMPERATURE=0.7

# =============================================================================
# 📊 システム設定
# =============================================================================

# ログレベル (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# バックアップ有効化
BACKUP_ENABLED=true

# 監視有効化
MONITORING_ENABLED=true

# 自動保存間隔（秒）
AUTO_SAVE_INTERVAL=300

# =============================================================================
# 🗄️ データベース設定
# =============================================================================

# SQLiteデータベースパス
DATABASE_URL=sqlite:///data/conversations.db

# PostgreSQL設定（オプション）
# DATABASE_URL=postgresql://user:password@localhost:5432/voice_ai

# =============================================================================
# 📁 ファイルパス設定
# =============================================================================

# 音声ファイル保存先
AUDIO_OUTPUT_DIR=./data/audio_files

# ログファイル保存先
LOG_DIR=./logs

# 会話履歴保存先
CONVERSATION_DIR=./data/conversations

# Obsidian Vaultパス
OBSIDIAN_VAULT_PATH=~/Library/Mobile Documents/com~apple~CloudDocs/Obsidian

# =============================================================================
# 🔐 セキュリティ設定
# =============================================================================

# 暗号化キー（自動生成推奨）
ENCRYPTION_KEY=your_encryption_key_here

# セッションタイムアウト（分）
SESSION_TIMEOUT=60

# API呼び出し制限（分間）
API_RATE_LIMIT=100

# =============================================================================
# 🌐 ネットワーク設定
# =============================================================================

# プロキシ設定（必要に応じて）
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# タイムアウト設定（秒）
REQUEST_TIMEOUT=30

# リトライ回数
MAX_RETRIES=3

# =============================================================================
# 🎮 ロールプレイ設定
# =============================================================================

# デフォルトロール
DEFAULT_ROLE=assistant

# 感情表現レベル (1-10)
EMOTION_LEVEL=5

# 話者分離有効化
SPEAKER_DIARIZATION=true

# リアルタイム処理有効化
REALTIME_PROCESSING=true

# =============================================================================
# 📈 パフォーマンス設定
# =============================================================================

# 並列処理数
MAX_WORKERS=4

# メモリ制限（MB）
MEMORY_LIMIT=8192

# GPU使用有効化
USE_GPU=true

# キャッシュ有効化
ENABLE_CACHE=true

# =============================================================================
# 🔧 開発者設定
# =============================================================================

# デバッグモード
DEBUG_MODE=false

# テストモード
TEST_MODE=false

# モックAPI使用
USE_MOCK_API=false

# 詳細ログ出力
VERBOSE_LOGGING=false

# =============================================================================
# 📱 通知設定
# =============================================================================

# 通知有効化
NOTIFICATIONS_ENABLED=true

# メール通知設定
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack通知設定（オプション）
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =============================================================================
# 🎨 UI設定
# =============================================================================

# テーマ設定
UI_THEME=dark

# 言語設定
LANGUAGE=ja

# タイムゾーン
TIMEZONE=Asia/Tokyo

# =============================================================================
# 📊 監視設定
# =============================================================================

# Prometheusポート
PROMETHEUS_PORT=9090

# Grafanaポート
GRAFANA_PORT=3000

# メトリクス収集間隔（秒）
METRICS_INTERVAL=60

# =============================================================================
# 🔄 バックアップ設定
# =============================================================================

# バックアップ保存先
BACKUP_DIR=~/Backups/voice-ai-system

# バックアップ保持期間（日）
BACKUP_RETENTION_DAYS=30

# 自動バックアップ有効化
AUTO_BACKUP=true

# バックアップスケジュール（cron形式）
BACKUP_SCHEDULE=0 3 * * 1

# =============================================================================
# 🚀 起動設定
# =============================================================================

# 自動起動有効化
AUTO_START=false

# 起動遅延（秒）
STARTUP_DELAY=5

# ヘルスチェック間隔（秒）
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# 📝 注意事項
# =============================================================================

# 1. APIキーは必ず安全に管理してください
# 2. .envファイルはGitにコミットしないでください
# 3. 本番環境では適切なセキュリティ設定を行ってください
# 4. 定期的なバックアップを実行してください
# 5. システムリソースを監視してください

