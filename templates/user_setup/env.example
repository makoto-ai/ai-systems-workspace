# AI Systems Workspace - 環境変数テンプレート
# 使用方法: cp env.example .env してから値を設定してください

# =============================================================================
# API キー設定
# =============================================================================

# Anthropic Claude API
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI GPT-4 API
OPENAI_API_KEY=your_openai_api_key_here

# Groq API (オプション)
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# データベース設定
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://ai_user:ai_password@localhost:5432/ai_systems
DATABASE_PASSWORD=ai_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# 音声処理設定
# =============================================================================

# WhisperX エンドポイント
WHISPERX_ENDPOINT=http://localhost:9000

# Voicevox エンドポイント
VOICEVOX_ENDPOINT=http://localhost:50021

# 音声設定
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default
SAMPLE_RATE=16000
CHANNELS=1

# =============================================================================
# セキュリティ設定
# =============================================================================

# JWT シークレット
JWT_SECRET=your_jwt_secret_here

# 暗号化キー
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# システム設定
# =============================================================================

# 環境設定
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ポート設定
APP_PORT=8000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# バックアップ設定
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# 監視設定
MONITORING_ENABLED=true
METRICS_ENABLED=true

# =============================================================================
# 外部サービス設定（オプション）
# =============================================================================

# Vault 設定
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# iCloud 同期設定
ICLOUD_SYNC_ENABLED=true
ICLOUD_BACKUP_PATH=~/Library/Mobile Documents/com~apple~CloudDocs/AI-Backups

# =============================================================================
# 開発用設定
# =============================================================================

# テスト用設定
TEST_MODE=false
MOCK_API_RESPONSES=false

# デバッグ設定
DEBUG_LEVEL=INFO
TRACE_ENABLED=false

# =============================================================================
# パフォーマンス設定
# =============================================================================

# 並列処理設定
MAX_WORKERS=4
WORKER_TIMEOUT=30

# キャッシュ設定
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# ログ設定
# =============================================================================

# ログファイル設定
LOG_FILE_PATH=logs/
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5

# ログレベル設定
APP_LOG_LEVEL=INFO
ACCESS_LOG_LEVEL=INFO
ERROR_LOG_LEVEL=ERROR

# =============================================================================
# 注意事項
# =============================================================================

# 1. このファイルを .env にコピーしてから値を設定してください
# 2. API キーは機密情報なので、.env ファイルを Git にコミットしないでください
# 3. 本番環境では、より強力なパスワードとシークレットを使用してください
# 4. 定期的にバックアップを実行してください 